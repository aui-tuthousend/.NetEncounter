@model MVC.NetTest.Models.UpdateUserViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<body>
<div>
    <h2>Edit/view user</h2>
    <form method="post" action="View" class="mt-5">
        <div class="form-group">
            <label>ID</label>
            <input type="text" class="form-control" asp-for="Id" readonly>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" asp-for="Name">
        </div>
        <div class="form-group">
            <label>Date of Birth</label>
            <input type="date" class="form-control" asp-for="BirthDate">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>
</body>
